"""
An application that deletes repeated characters in a string
"""
def sequence_del(my_str):
    new_word = my_str[0]  # Initialize new_word with the first character of the string
    for i in range(1, len(my_str)):
        if my_str[i] != my_str[i-1]:  # Compare the current character with the previous character
            new_word += my_str[i]
    return new_word
